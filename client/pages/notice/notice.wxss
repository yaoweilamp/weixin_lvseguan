.notice-title{
  display: block;
  width: 100%;
  margin-bottom:10rpx;
  box-sizing: border-box;
  padding: 0rpx;
}

.title-image{
  width:100%;
  height: 122rpx;
}

.house-audio{
  display: block;
  width: 100%;
  margin-bottom: 20rpx;
  padding-left: 50rpx;
  box-sizing: border-box;
}

.audio-wrp{
  margin-top:0rpx;
  display: flex;
}

.audio-image{
  width: 700rpx;
  height:80rpx;
  margin: 0 auto;
}

.house-audio-buttons{
  position: relative;
  align-items: center;
  justify-content: center;
  margin-top: 12rpx;
}

.house-audio-button{
  width: 50rpx;
  height: 50rpx;
  margin: 0rpx 20rpx;
}

.house-audio-image{
  width: 50rpx;
  height: 50rpx;
  margin: 0rpx 20rpx;
}

.audio-body-info{
  margin:20rpx 40rpx;
}

.slider {
  width: 350rpx;
  margin: 0rpx;
}

.play-time {
  margin-top: 12rpx;
  font-size: 20rpx;
  color: #666666;
  width: 150rpx;
  padding: 10rpx 0;
}

.notice-body{
  display: block;
  width:100%;
  height: 870rpx;
  background-color: #e5e5e5;
}

.notice-image{
  display: block;
  padding: 40rpx 20rpx 0rpx;
}

.notice-image image{
  width: 710rpx;
  height: 544rpx;
}

.notice-bottom{
  display: block;
  padding:120rpx 20rpx 0rpx 240rpx;
}

.notice-bottom image{
  width:269rpx;
  height:138rpx;
}

.end{
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  background-color: #e5e5e5;
}
