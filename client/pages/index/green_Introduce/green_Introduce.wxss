/* pages/index/green_Introduce/green_Introduce.wxss */

.swiper-image{
  display: block;
  width: 100%;
  height: 400rpx;
}

.house-audio{
  display: block;
  width: 100%;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  background-image: url('../../../image/audio.png');
  background-size:cover;
}

.audio-wrp{
  margin-top:0rpx;
  display: flex;
}

.audio-image{
  width: 700rpx;
  height:80rpx;
  margin: 0 auto;
}

.house-audio-buttons{
  position: relative;
  align-items: center;
  justify-content: center;
  margin-top: 12rpx;
}

.house-audio-button{
  width: 50rpx;
  height: 50rpx;
  margin: 0rpx 20rpx;
}

.house-audio-image{
  width: 50rpx;
  height: 50rpx;
  margin: 0rpx 20rpx;
}

.audio-body-info{
  margin:20rpx 40rpx;
}

.slider {
  width: 350rpx;
  margin: 0rpx;
}

.play-time {
  margin-top: 12rpx;
  font-size: 20rpx;
  color: #666666;
  width: 150rpx;
  padding: 10rpx 0;
}

.green-introduction-title{
  display:block;
  margin-top:20rpx;
}

.green-introduction-title image{
  margin-left: 30rpx;
  width: 500rpx;
  height: 50rpx;
}

.green-introduction-text{
  display:block;
  margin-top:20rpx;
  height: 610rpx;
  background-color: #e5e5e5;
  box-sizing: border-box;
  padding-top: 20rpx;
}

.green-introduction-text image{
  width: 100%;
  height: 580rpx;
}

.green-text-box{
  display: flex;
  margin: 20rpx 20rpx 30rpx;
  background-color: #f6f6f6;
  font-size: 24rpx;
  color: #878787;
  padding:20rpx 40rpx 30rpx;
}