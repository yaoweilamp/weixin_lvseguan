  width: 100%;
  height: 400rpx;
}

.house-audio{
  display: block;
  width: 100%;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.audio-wrp{
  margin-top:0rpx;
  display: flex;
}

.audio-image{
  width: 700rpx;
  height:80rpx;
  margin: 0 auto;
}

.house-audio-buttons{
  position: relative;
  align-items: center;
  justify-content: center;
  margin-top: 12rpx;
}

.house-audio-button{
  width: 50rpx;
  height: 50rpx;
  margin: 0rpx 20rpx;
}

.house-audio-image{
  width: 50rpx;
  height: 50rpx;
  margin: 0rpx 20rpx;
}

.audio-body-info{
  margin:20rpx 40rpx;
}

.slider {
  width: 350rpx;
  margin: 0rpx;
}

.play-time {
  margin-top: 12rpx;
  font-size: 20rpx;
  color: #666666;
  width: 150rpx;
  padding: 10rpx 0;
}

.introduction-text{
  display:block;
  margin-top:20rpx;
  height: 720rpx;
  background-color: #e5e5e5;
  box-sizing: border-box;
  padding-top: 20rpx;
}

.introduction-text-title{
  display:flex;
  margin:20rpx 20rpx 0rpx;
  background-color: #f6f6f6;
}

.introduction-text-title image{
  margin: 20rpx 0rpx 0rpx 30rpx;
  width: 30rpx;
  height: 50rpx;
}

.text-title1{
  display: block;
  margin-top: 20rpx;
  justify-content:center;
  font-size: 28rpx;
  font-weight: bold;
  color:#3a822c;
}

.text-title2{
  display: block;
  margin: 20rpx 0rpx 0rpx 10rpx;
  font-size:28rpx;
  font-weight: bold;
  color:#434343;
}

.introduction-text-box{
  display: flex;
  margin: 0rpx 20rpx 20rpx;
  background-color: #f6f6f6;
  font-size: 24rpx;
  color: #878787;
  padding:20rpx 40rpx 30rpx;
  height:250rpx;
}



.box {
  height: 220rpx;
  z-index: 0;
  margin: 0rpx 20rpx;
  padding-top:50rpx;
  background-color:#f6f6f6;
}
.box .club {
  height: 140rpx;
  width: 140rpx;
  position: relative;
  display: inline-block;
}
.club image {
  height: 100rpx;
  width: 140rpx;
}
.club text {
  display: block;
  width: 100%;
  font-size: 16rpx;
  color: #878787;
  line-height: 40rpx;
  text-align: center;
}
.box .club:nth-child(1) {
  transform: scale(0.8, 0.8) translateX(-120rpx);
  opacity: 0;
  z-index: 10;
}
.box .club:nth-child(2) {
  transform: scale(1,1) translateX(-80rpx);
  opacity: 0.5;
  z-index: 100;
}
.box .club:nth-child(3) {
  transform: scale(1.4,1.4);
  z-index: 1000;
}
.box .club:nth-child(4) {
  transform: scale(1,1) translateX(80rpx);
  opacity: 0.5;
  z-index: 100;
}
.box .club:nth-child(5) {
  transform: scale(0.8, 0.8) translateX(120rpx);
  opacity: 0;
  z-index: 10;
}
.box .club:nth-child(1) text,
.box .club:nth-child(2) text,
.box .club:nth-child(4) text,
.box .club:nth-child(5) text{
  visibility: hidden;
}

.end{
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  background-color: #e5e5e5;
}